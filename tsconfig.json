{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
	"experimentalDecorators": true,   /* decorators on functions, e.g. for memoizing function get */
        "outDir": "out",
 	"rootDir": "src",
	"lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "noImplicitAny": true,
        "newLine": "LF",
        "allowJs": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    // If a segment of a glob pattern includes only * or .*,
    // then only files with supported extensions are included
    // (e.g. .ts, .tsx, and .d.ts by default with .js and .jsx if allowJs is set to true).
    "include": [
	"src"
    ],
    "exclude": [
	"node_modules",
	".vscode-test"
    ],
    "references": [
	{ "path": "./client" },
	{ "path": "./server" }
    ]
}
